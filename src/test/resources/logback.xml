<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="logging.level.root" level="OFF"/>
    <logger name="logging.level.org.springframework" level="OFF"/>
    <logger name="logging.level.org.hibernate" level="OFF"/>
    <logger name="com.herolynx.bouncer" level="OFF"/>

    <root level="OFF">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>